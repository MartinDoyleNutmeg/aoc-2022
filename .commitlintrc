{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "scope-enum": [
      2,
      "always",
      [
        "puzzles",
        "core"
      ]
    ],
    "subject-case": [
      2,
      "always",
      "sentence-case"
    ],
    "type-enum": [
      2,
      "always",
      [
        "chore",
        "feat",
        "fix",
        "refactor",
        "revert"
      ]
    ]
  }
}
